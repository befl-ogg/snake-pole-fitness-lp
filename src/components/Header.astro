---
import Logo from "./Logo.astro";
const navbarLinks = [
  { label: "Inicio", href: "#home", ariaLabel: "Inicio" },
  { label: "Membresías", href: "#pricing", ariaLabel: "Membresías" },
  { label: "Clases", href: "#clases", ariaLabel: "Clases" },
  { label: "Dudas", href: "#faqs", ariaLabel: "Dudas" },
  { label: "Contacto", href: "#contact", ariaLabel: "Contacto   " },
];
---

<header class="sticky-navbar sticky">
  <div class="w-full flex flex-col justify-center sm:flex-row">
    <div class="w-full flex justify-center sm:pl-10 sm:justify-start">
      <Logo />
    </div>

    <nav class="flex flex-row justify-center items-center w-full text-center gap-5 p-5 sm:justify-end sm:gap-10">
      {
        navbarLinks.map(({ href, label, ariaLabel }) => (
          <a class="text-white" href={href} aria-label={ariaLabel}>
            {label}
          </a>
        ))
      }
    </nav>
  </div>
</header>

<style>
  .sticky-navbar {
    top: 0;
    left: 0;
    width: 100%;
    background-color: #1c1c1c;
    z-index: 1000;
  }
</style>
